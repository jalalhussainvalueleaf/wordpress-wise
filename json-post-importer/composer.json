{
    "name": "json-post-importer/json-post-importer",
    "description": "WordPress plugin for importing posts from JSON data",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "JSON Post Importer Team"
        }
    ],
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "yoast/phpunit-polyfills": "^1.0",
        "wp-coding-standards/wpcs": "^2.3",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7"
    },
    "autoload": {
        "psr-4": {
            "JSONPostImporter\\": "includes/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "JSONPostImporter\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit --configuration tests/phpunit.xml",
        "test-coverage": "phpunit --configuration tests/phpunit.xml --coverage-html tests/coverage",
        "cs": "phpcs --standard=WordPress includes/ admin/ public/",
        "cbf": "phpcbf --standard=WordPress includes/ admin/ public/"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}